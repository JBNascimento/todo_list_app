<p id="notice"><%= notice %></p>

<p>
  <strong>Título:</strong>
  <%= @todo_list.title %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @todo_list.description %>
</p>

<%= link_to favorite_text, favorites_update_path(todo_list: @todo_list), id:'favorite_link', remote: true %>  

<div id="todo_items_wrapper">
  <%= render @todo_list.todo_items %>
  <div id="form">
    <%= render "todo_items/form" %>
  </div>
</div>
<% if @todo_list.user == current_user %>
  <%= link_to 'Editar', edit_todo_list_path(@todo_list) %> 
<% end %>
<%= link_to 'Voltar', todo_lists_path %>
