<%= form_with(model: todo_list, local: true) do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo_list.errors.count, "error") %> impediu que essa lista fosse salva:</h2>

      <ul>
      <% todo_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :título %>
    <%= form.text_field :title, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :descrição %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="field">
   <strong> <%= form.label "Lista Privada?" %> </strong>
    <%= form.check_box :is_private %>
  </div>

  <div class="actions">
  <div class="row">
    <div class="d-block mx-auto col-md-4">
      <%= form.submit "Criar",  :class => "btn btn-lg btn-primary btn-block btn-create-list" %>
    </div>
  </div>
  </div>
<% end %>
