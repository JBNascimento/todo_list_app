<body class="forms-in">
<div class="form-signin">
<div class="text-center mb-4">
<img class="mb-4" src="https://image.flaticon.com/icons/svg/1651/1651774.svg" alt="" width="72" height="72">
  <h1>ToDo Lists</h1>
</div>
<h4><center>Entrar</center></h4>
<br/>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-label-group">
    <%= f.email_field :email, placeholder: "E-mail", autofocus: true, autocomplete: "email", id:"inputEmail", class:"form-control"  %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password,  :placeholder => "Senha", autocomplete: "current-password", id: "inputPassword", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :Lembrar_senha %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", :class => "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</body>